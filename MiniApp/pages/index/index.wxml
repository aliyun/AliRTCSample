<!--index.wxml-->
<view class="alirtc-bg">
  <view class="content flex-center-column">
    <view class="title">
      <image class="logo" src="../../images/logo.png" mode="aspectFit"></image>
      <text class="title-text">阿里云音视频通信RTC提供基础通信服务</text>
    </view>
    <view class="userinfo">
      <block>
        <view class='userinfo-avatar'>
          <open-data type='userAvatarUrl'></open-data>
        </view>
        <view class='userinfo-nickname'>
          <open-data type='userNickName'></open-data>
        </view>
      </block>
    </view>
    <view class="menu">
      <view 
        class="menu-view" 
        wx:for="{{menulist}}" 
        wx:key="index" 
        data-path="{{item.path}}"
        bindtap="toApplication"
      >
        <image src="{{item.src}}"></image>
        <text>{{item.text}}</text>
      </view>
    </view>
    <view class="version flex-center-column">
      <text>{{version}}</text>
    </view>
  </view>
</view>
